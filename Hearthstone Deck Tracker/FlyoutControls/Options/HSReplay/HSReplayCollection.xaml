<UserControl x:Class="Hearthstone_Deck_Tracker.FlyoutControls.Options.HSReplay.HSReplayCollection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Hearthstone_Deck_Tracker.Controls"
             xmlns:converters="clr-namespace:Hearthstone_Deck_Tracker.Utility.Converters"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="500" d:DesignWidth="500">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
    </UserControl.Resources>
    <StackPanel Margin="20">
        <TextBlock TextAlignment="Center" FontWeight="SemiBold" FontSize="16">
            <Run Text="The easiest way to find the best decks for you!"/>
            <LineBreak/>
            <Run Text="Just sync your collection with HSReplay.net" FontWeight="Normal" FontSize="15"/>
        </TextBlock>
        <Button Style="{DynamicResource AccentedSquareButtonStyle}" Margin="25" Width="200"
                Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolToVisibility}}"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding LoginButtonEnabled}">
                <TextBlock Text="Login"/>
        </Button>
        <StackPanel Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibility}}">
            <CheckBox Content="Sync my collection" HorizontalAlignment="Center" Margin="0,10,0,70"
                      IsChecked="{Binding CollectionSyncingEnabled}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0"
                        Visibility="{Binding CollectionSynced, Converter={StaticResource BoolToVisibility}}">
                <controls:StatusIndicator Success="{Binding CollectionSyncingEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          VerticalAlignment="Center" FontSize="16"/>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="Collection up-to-date!"
                               Visibility="{Binding CollectionUpToDate, Converter={StaticResource BoolToVisibility}}"/>
                    <TextBlock FontSize="14">
                        <Run Text="Last updated"/>
                        <Run Text="{Binding SyncAge, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <Button Style="{DynamicResource AccentedSquareButtonStyle}" Width="300" Margin="0,10,0,0"
                    Command="{Binding HSReplayDecksCommand}"
                    Visibility="{Binding CollectionSynced, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Find decks on HSReplay.net"/>
            </Button>
            <StackPanel Visibility="{Binding CollectionSyncingEnabled, Converter={StaticResource BoolToVisibility}}">
                <TextBlock TextAlignment="Center" FontWeight="SemiBold" FontSize="16"
                           Visibility="{Binding CollectionSynced, Converter={StaticResource InverseBoolToVisibility}}">
                    <Run Text="Just one more step:" FontSize="14"/>
                    <LineBreak/>
                    <Run Text="Start Hearthstone and open your collection."/>
                </TextBlock>
                <TextBlock TextAlignment="Center" Opacity="0.5" Margin="0,70,0,0">
                    <Run Text="Your collection will automatically update when:"/>
                    <LineBreak/>
                    <Run Text="- Opening or closing your collection"/>
                    <LineBreak/>
                    <Run Text="- Closing the pack opening screen"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
